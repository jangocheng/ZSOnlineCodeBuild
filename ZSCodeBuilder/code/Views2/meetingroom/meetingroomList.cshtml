@using Model;
<div class="main-content">
    <div class="main-content-inner">
        <div class="breadcrumbs ace-save-state" id="breadcrumbs">
            <ul class="breadcrumb">
                <li>
                    <i class="ace-icon fa fa-home home-icon"></i>
                    <a href="/">首页</a>
                </li>
                <li class="active">会议室管理</li>
            </ul>
            <!-- /.breadcrumb -->
            <!-- /.nav-search -->
        </div>
        <div class="page-content">
            <!-- /放搜索控件 -->
            <div class="col-xs-5">
                
            </div>
            <div class="col-xs-7">
                <div class="input-group pull-right">
                    <span class="input-group-btn">
                        <a class="btn btn-success btn-sm pull-right" href="javascript:void(0)" onclick="zstools.edit('/meetingroom/meetingroomInfo')">
                            <span class="ace-icon fa fa-pencil-square-o icon-on-right bigger-110"></span> 新增
                        </a>
                    </span>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="row">
                        <div class="col-xs-12">

                            <div class="clearfix">
                                <div class="pull-right tableTools-container"></div>
                            </div>


                            <!-- div.table-responsive -->
                            <!-- div.dataTables_borderWrap -->
                            <div>
                                	<table class="table table-striped table-bordered table-hover">
		<thead>
			<tr>
				<th>序号</th>
				<th>楼宇</th>
				<th>会议服务介绍</th>
				<th>客服电话</th>
				<th>楼层</th>
				<th>房间号</th>
				<th>桌型</th>
				<th>可容纳人数</th>
				<th>收费标准</th>
				<th>是否开放</th>
				<th>会议室类型</th>
				<th>会议室套餐</th>
				<th>操作</th>

			</tr>
		</thead>
		<tbody>
			@{
				var meetingroomList = ViewBag.meetingroomList as List<tb_meetingroom>;
				 if (meetingroomList != null && meetingroomList.Count > 0)
				{
					for (int i = 0; i < meetingroomList.Count; i++)
					{
						<tr>
							<td>@(i+1)</td>
							<td>@meetingroomList[i].buildingid</td>
							<td>@meetingroomList[i].intro</td>
							<td>@meetingroomList[i].phone</td>
							<td>@meetingroomList[i].floor</td>
							<td>@meetingroomList[i].roomnumber</td>
							<td>@meetingroomList[i].desktype</td>
							<td>@meetingroomList[i].hold</td>
							<td>@meetingroomList[i].fee</td>
							<td>@meetingroomList[i].isopen</td>
							<td>@meetingroomList[i].roomtype</td>
							<td>@meetingroomList[i].package</td>
							<td>
								<div class="hidden-sm hidden-xs action-buttons">
									<a class="green" href="javascript: void(0)" onclick="zstools.edit('/meetingroom/meetingroomInfo?id=@meetingroomList[i].id')" ><i class="ace-icon fa fa-pencil bigger-130"></i>编辑</a>
									<a class="red" href="javascript: void(0)" onclick="zstools.del('/meetingroom/meetingroomDelete?id=@meetingroomList[i].id',this)" ><i class="ace-icon fa fa-trash-o bigger-130"></i>删除</a>
								</div>
							</td>
						</tr>
					}
				}
			}

		</tbody>
	</table>

                            </div>

                            <div class="modal-footer no-margin-top">
                                @Html.Raw(ViewBag.page)
                            </div>
                        </div>
                        <!-- /.modal-content -->
                    </div>
                    <!-- /.modal-dialog -->
                </div>
                <!-- PAGE CONTENT ENDS -->
            </div>
        </div>

        <!-- /.row -->
    </div>
    <!-- /.page-content -->
</div>
