@model Model.tb_room
<div class="main-content">
    <div class="main-content-inner">
        <div class="page-content main-content">
            <div class="breadcrumbs ace-save-state" id="breadcrumbs">
                <ul class="breadcrumb">
                    <li>
                        <i class="ace-icon fa fa-home home-icon"></i>
                        <a href="/">首页</a>
                    </li>
                    <li>
                        <a href="/room/roomList">房屋租赁</a>
                    </li>
                    <li class="active">
                        房屋租赁详情
</li>
                </ul>
                <!-- /.breadcrumb -->
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <div class="widget-box">
                        <div class="widget-header">
                            <h4 class="widget-title">基本信息</h4>

                            <div class="widget-toolbar">
                                <a href="#" data-action="collapse">
                                    <i class="ace-icon fa fa-chevron-up"></i>
                                </a>
                            </div>
                        </div>

                        <div class="widget-body" style="display: block;">
                            <div class="widget-main">
                                	<form action="/room/roomSave" class="form-horizontal" role="form">
		<input type="hidden" name="id" value="@Model.id" />
		<div class="form-group">
			<label class="col-xs-2 control-label " >楼宇</label>
			<div class="col-xs-4"><input type="text" id="buildingid" name="buildingid" class="col-xs-10 col-sm-10 " value="@Model.buildingid"></div>
			<label class="col-xs-2 control-label " >楼层</label>
			<div class="col-xs-4"><input type="text" id="floor" name="floor" class="col-xs-10 col-sm-10 " value="@Model.floor"></div>
		</div>
		<div class="form-group">
			<label class="col-xs-2 control-label " >房间号</label>
			<div class="col-xs-4"><input type="text" id="roomnumber" name="roomnumber" class="col-xs-10 col-sm-10 " value="@Model.roomnumber"></div>
			<label class="col-xs-2 control-label " >类型</label>
			<div class="col-xs-4"><input type="text" id="roomtype" name="roomtype" class="col-xs-10 col-sm-10 " value="@Model.roomtype"></div>
		</div>
		<div class="form-group">
			<label class="col-xs-2 control-label " >可容纳人数</label>
			<div class="col-xs-4"><input type="text" id="hold" name="hold" class="col-xs-10 col-sm-10 " value="@Model.hold"></div>
			<label class="col-xs-2 control-label " >房型</label>
			<div class="col-xs-4"><input type="text" id="housetype" name="housetype" class="col-xs-10 col-sm-10 " value="@Model.housetype"></div>
		</div>
		<div class="form-group">
			<label class="col-xs-2 control-label " >朝向</label>
			<div class="col-xs-4"><input type="text" id="direction" name="direction" class="col-xs-10 col-sm-10 " value="@Model.direction"></div>
			<label class="col-xs-2 control-label " >面积</label>
			<div class="col-xs-4"><input type="text" id="space" name="space" class="col-xs-10 col-sm-10 " value="@Model.space"></div>
		</div>
		<div class="form-group">
			<label class="col-xs-2 control-label " >租赁状态</label>
			<div class="col-xs-4"><input type="text" id="status" name="status" class="col-xs-10 col-sm-10 " value="@Model.status"></div>
			<label class="col-xs-2 control-label " >是否开放</label>
			<div class="col-xs-4"><input type="text" id="isopen" name="isopen" class="col-xs-10 col-sm-10 " value="@Model.isopen"></div>
		</div>
		<div class="clearfix form-actions"><div class="col-md-offset-5 col-md-9"><button class="btn btn-info" type="button" onclick="zstools.save()"><i class="ace-icon fa fa-check bigger-110"></i>Save（保存）</button></div></div>
	</form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.page-content -->
</div>
 