@model Model.tb_roomface
<div class="main-content">
    <div class="main-content-inner">
        <div class="page-content main-content">
            <div class="breadcrumbs ace-save-state" id="breadcrumbs">
                <ul class="breadcrumb">
                    <li>
                        <i class="ace-icon fa fa-home home-icon"></i>
                        <a href="/">首页</a>
                    </li>
                    <li>
                        <a href="/roomface/roomfaceList">房屋展示图</a>
                    </li>
                    <li class="active">
                        房屋展示图详情
</li>
                </ul>
                <!-- /.breadcrumb -->
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <div class="widget-box">
                        <div class="widget-header">
                            <h4 class="widget-title">基本信息</h4>

                            <div class="widget-toolbar">
                                <a href="#" data-action="collapse">
                                    <i class="ace-icon fa fa-chevron-up"></i>
                                </a>
                            </div>
                        </div>

                        <div class="widget-body" style="display: block;">
                            <div class="widget-main">
                                	<form action="/roomface/roomfaceSave" class="form-horizontal" role="form">
		<input type="hidden" name="id" value="@Model.id" />
		<div class="form-group">
			<label class="col-xs-2 control-label " >房间ID</label>
			<div class="col-xs-4"><input type="text" id="roomid" name="roomid" class="col-xs-10 col-sm-10 " value="@Model.roomid"></div>
			<label class="col-xs-2 control-label " >文件名</label>
			<div class="col-xs-4"><input type="text" id="name" name="name" class="col-xs-10 col-sm-10 " value="@Model.name"></div>
		</div>
		<div class="form-group">
			<label class="col-xs-2 control-label " >文件简介</label>
			<div class="col-xs-4"><input type="text" id="intro" name="intro" class="col-xs-10 col-sm-10 " value="@Model.intro"></div>
			<label class="col-xs-2 control-label " >图片地址</label>
			<div class="col-xs-4"><input type="text" id="pic" name="pic" class="col-xs-10 col-sm-10 " value="@Model.pic"></div>
		</div>
		<div class="clearfix form-actions"><div class="col-md-offset-5 col-md-9"><button class="btn btn-info" type="button" onclick="zstools.save()"><i class="ace-icon fa fa-check bigger-110"></i>Save（保存）</button></div></div>
	</form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.page-content -->
</div>
 